<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TW2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/messageimage_1653580982694"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/bname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="請輸入盲人姓名"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/baddress"
        app:layout_constraintStart_toStartOf="@+id/baddress"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/baddress"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="請輸入盲人地址"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/bdeviceCode"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/bdeviceCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:hint="請輸入認證碼"
        android:inputType="numberSigned"
        android:maxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="盲人姓名："
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bname"
        app:layout_constraintEnd_toStartOf="@+id/bname"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="盲人地址："
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bdeviceCode"
        app:layout_constraintEnd_toStartOf="@+id/bdeviceCode"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="導盲杖認證碼："
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bdeviceCode"
        app:layout_constraintEnd_toStartOf="@+id/bdeviceCode"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/login1_"
        android:text="confirm"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bdeviceCode"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>